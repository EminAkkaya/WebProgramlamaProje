@model IEnumerable<WebProgramlamaProje.Models.Trainer>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Antrenörler</h2>
        <a asp-action="Create" class="btn btn-success">+ Yeni Antrenör</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Fotoğraf</th>
                <th>Ad Soyad</th>
                <th>Mesai</th>
                <th>Uzmanlıklar</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PhotoUrl))
                        {
                            <img src="@item.PhotoUrl" alt="Foto" style="width:50px; height:50px; object-fit:cover; border-radius:50%;" />
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>@item.FullName</td>
                    <td>@item.ShiftStart.ToString(@"hh\:mm") - @item.ShiftEnd.ToString(@"hh\:mm")</td>
                    <td>
                        @foreach (var ts in item.TrainerServices)
                        {
                            <span class="badge bg-info text-dark">@ts.Service.Name</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Silmek istediğine emin misin?');">
                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
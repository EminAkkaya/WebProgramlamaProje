@model WebProgramlamaProje.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null; // Tam ekran deneyimi için Layout'u kaldırıyoruz
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GigaChad Gym</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            /* Arka plan görseli */
            background: url('https://images.unsplash.com/photo-1540497077202-7c8a33801524?q=80&w=1470&auto=format&fit=crop') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 0.7); /* Karartma perdesi */
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .register-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px); /* Buzlu cam efekti */
            border-radius: 15px;
            padding: 40px;
            width: 100%;
            max-width: 450px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.6);
            /* Animasyon ismi aşağıda tanımlı */
            animation: slideUp 0.8s ease-out;
        }

        .brand-logo {
            font-size: 1.8rem;
            font-weight: bold;
            color: #198754; /* Success Green */
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-floating > label {
            color: #6c757d;
        }

        .btn-register {
            background: linear-gradient(45deg, #198754, #146c43);
            border: none;
            padding: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(25, 135, 84, 0.4);
            filter: brightness(1.1);
        }

        
        @@keyframes slideUp {
            from { 
                opacity: 0; 
                transform: translateY(30px); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0); 
            }
        }
    </style>
</head>
<body>

    <div class="overlay">
        <div class="register-card text-center">

            <div class="brand-logo">
                <i class="fa-solid fa-heart-pulse"></i> GigaChad Gym
            </div>
            <h5 class="text-secondary mb-4">Aramıza Katılın</h5>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-start small" role="alert"></div>

            <form asp-action="Register" method="post">

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Email"><i class="fa fa-envelope me-2"></i>Email Adresi</label>
                    <span asp-validation-for="Email" class="text-danger small text-start d-block mt-1"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                    <label asp-for="Password"><i class="fa fa-lock me-2"></i>Şifre</label>
                    <span asp-validation-for="Password" class="text-danger small text-start d-block mt-1"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifre Tekrar" />
                    <label asp-for="ConfirmPassword"><i class="fa fa-check-double me-2"></i>Şifre Tekrar</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small text-start d-block mt-1"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-register text-white rounded-pill">
                        Kayıt Ol ve Başla
                    </button>
                </div>

                <hr class="my-4">

                <div class="mt-3">
                    <p class="text-muted mb-2">Zaten bir hesabınız var mı?</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-dark btn-sm px-4 rounded-pill">
                        Giriş Yap
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
@model IEnumerable<WebProgramlamaProje.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Onay Paneli";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa fa-clock text-warning"></i> Onay Bekleyen Randevular</h2>
        <a asp-controller="Home" asp-action="Admin" class="btn btn-outline-secondary">
            <i class="fa fa-arrow-left"></i> Panele Dön
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>Şu an onay bekleyen randevu bulunmuyor.</h4>
            <p>Tüm talepler incelendi.</p>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th>Tarih / Saat</th>
                        <th>Müşteri (Üye)</th>
                        <th>Hizmet</th>
                        <th>Antrenör</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@item.AppointmentDate.ToString("dd.MM.yyyy")</div>
                                <div class="small text-muted">
                                    @item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="ms-2">
                                        <p class="fw-bold mb-1">@item.Member?.UserName</p>
                                        <p class="text-muted mb-0 small">@item.Member?.Email</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-primary">@item.Service.Name</span>
                            </td>
                            <td>@item.Trainer.FullName</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <form asp-action="Approve" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-success btn-sm" title="Onayla">
                                            <i class="fa fa-check"></i> Onayla
                                        </button>
                                    </form>

                                    <form asp-action="Reject" method="post" onsubmit="return confirm('Bu randevuyu reddetmek istediğinize emin misiniz?');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" title="Reddet">
                                            <i class="fa fa-times"></i> Reddet
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>